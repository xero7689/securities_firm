# Database Configuration
POSTGRES_DB=securities_firm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Django Configuration
DJANGO_SECRET_KEY=your-very-secure-secret-key-here

# Deployment Configuration
# IS_DEPLOYED: Controls database backend selection
#   - true: Uses PostgreSQL (for container/production deployment)
#   - false: Uses SQLite (for local development)
IS_DEPLOYED=true

# Debug Configuration
# IS_DEBUG: Controls Django DEBUG setting
#   - true: Enables debug mode (for development only)
#   - false: Disables debug mode (REQUIRED for production deployment)
IS_DEBUG=true

ALLOWED_HOSTS=localhost,127.0.0.1
APP_NAME=securities_firm

# Uvicorn Configuration
# UVICORN_WORKER_NUMS: Number of worker processes for uvicorn
#   - Higher values improve performance for CPU-bound tasks
#   - Has no effect when UVICORN_DEBUG_RELOAD=true (reload mode uses single process)
UVICORN_WORKER_NUMS=1

# UVICORN_DEBUG_RELOAD: Enable auto-reload on code changes
#   - true: Server automatically reloads when source code changes (development only)
#   - false: No auto-reload, enables multi-worker mode (production)
#   - WARNING: When reload is enabled, UVICORN_WORKER_NUMS has no effect
UVICORN_DEBUG_RELOAD=true

# Docker Compose
COMPOSE_PROJECT_NAME=securities_firm

# CORS Settings
CSRF_TRUSTED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://0.0.0.0:8080
